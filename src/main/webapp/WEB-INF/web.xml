<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Bus Booking Web Application</display-name>

    <servlet>
        <servlet-name>BusController</servlet-name>
        <servlet-class>com.zsgs.busbooking.Controllers.BusController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BusController</servlet-name>
        <url-pattern>/api/bus/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TripController</servlet-name>
        <servlet-class>com.zsgs.busbooking.Controllers.TripController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TripController</servlet-name>
        <url-pattern>/api/trip/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.zsgs.busbooking.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>com.zsgs.busbooking.servlets.SignupServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TripSeatData</servlet-name>
        <servlet-class>com.zsgs.busbooking.servlets.TripSeatsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TripSeatData</servlet-name>
        <url-pattern>/seats</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.zsgs.busbooking.Filters.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>PassengerAuthFilter</filter-name>
        <filter-class>com.zsgs.busbooking.Filters.PassengerFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>PassengerAuthFilter</filter-name>
        <url-pattern>/api/passenger/*</url-pattern>
    </filter-mapping>

</web-app>